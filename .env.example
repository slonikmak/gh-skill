# Auth with Personal Access Token (Legacy)
GITHUB_TOKEN=your_github_token_here

# Auth with GitHub App (Recommended)
# App ID from "General" settings of your GitHub App
GITHUB_APP_ID=123456
# The contents of the .pem file you downloaded
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
# Installation ID from the URL after checking "Install App" (e.g. github.com/settings/installations/123456)
GITHUB_APP_INSTALLATION_ID=123456
